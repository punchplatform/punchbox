{
    "version": "6.0",
    "start_by_tenant" : false,
    "stop_by_tenant" : true,
    "applications": [
        {
            "name": "elastalert_validation",
            "runtime" : "shiva",
            "command": "elastalert",
            "args": [
                "--config", "config.yaml", "--verbose"
            ],
            "resources": [
                "config.yaml", "rules"
            ],
            "cluster": "common",
            "shiva_runner_tags": [
                "common"
            ]
        }
    ]
}