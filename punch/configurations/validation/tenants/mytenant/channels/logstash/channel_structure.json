{
    "version": "6.0",
    "start_by_tenant" : false,
    "stop_by_tenant" : true,
    "applications": [
        {
            "name": "logstash",
            "runtime" : "shiva",
            "command": "logstash",
            "args": [
                "-f", "logstash.conf"
            ],
            "cluster": "common",
            "shiva_runner_tags": [
                "common"
            ]
        }
    ],
    "resources": [
        {
            "type": "kafka_topic",
            "name": "mytenant_logstash",
            "cluster": "common",
            "partitions": 1,
            "replication_factor": 1
        }
    ]
}